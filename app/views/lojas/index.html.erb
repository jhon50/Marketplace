<p id="notice"><%= notice %></p>

<h1>Lojas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Website</th>
      <th>Logo</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lojas.each do |loja| %>
      <tr>
        <td><%= loja.nome %></td>
        <td><%= loja.website %></td>
        <td><%= loja.logo %></td>
        <td><%= loja.email %></td>
        <td><%= link_to 'Show', loja %></td>
        <td><%= link_to 'Edit', edit_loja_path(loja) %></td>
        <td><%= link_to 'Destroy', loja, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <% loja.produtos.each do |produto| %>
          <h3>1 produto</h3>
      <% end %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Loja', new_loja_path %>
